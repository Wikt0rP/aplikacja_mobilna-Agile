<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3d3d3d"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Witaj w CashFlow!"
        android:textColor="#d9d7d7"
        android:textSize="30dp"
        android:id="@+id/WelcomeText"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05"

        />
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Zaloguj się"
                android:layout_gravity="center"
                android:textColor="#d9d7d7"
                android:textStyle="bold"
                android:textSize="20dp"
                />

            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:inputType="text"
                android:textColor="#d9d7d7"
                android:backgroundTint="#757474"
                android:onClick="loginType"
                android:hint="login"
                android:textColorHint = "#808080"
                android:gravity="center"
                android:id="@+id/loginText"
                />
            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#d9d7d7"
                android:backgroundTint="#757474"
                android:hint="password"
                android:textColorHint = "#808080"
                android:onClick="passwordType"
                android:id="@+id/passwordText"
                android:inputType="textPassword"
                android:gravity="center" />
            <Button
                android:id="@+id/buttonLogin"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#D40D12"
                android:textColor="#d9d7d7"
                android:text="Zaloguj"
                android:onClick="buttonLoginClick" />
            <Button
                android:id="@+id/buttonRegister"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:backgroundTint="#D40D12"
                android:textColor="#d9d7d7"
                android:text="Załóż konto"
                android:onClick="buttonLoginClick"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>